%html
  %body{ style: 'background-color: white;', class: class_name, id: "id-for-html" }
    - random_array_of_stuff.each do |arr_elem|
      - if arr_elem
        - case arr_elem
          - when Fixnum
            %p
              = arr_elem > 0
              %tag
          - when String
            %p
              = arr_elem
              %tag
          - when Array
            %p
              = "length: #{arr_elem.length}"
              %tag
      - else
        Random html text
        = "Random erb string"
    :coffeescript
      if conditionIsTruthy
        someRandomVar = "String"
      else
        aDifferentVar = 5
    :scss
      body {
        line-height: 1;
        &:hover, p {
          line-height: .8;
        }
      }
